<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/stepper_import_secret_store_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:visibility="gone" />

    <SurfaceView
        android:id="@+id/stepper_import_secret_qr_reader"
        android:layout_width="@dimen/step_scan_secret_camera_size"
        android:layout_height="@dimen/step_scan_secret_camera_size"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/stepper_import_secret_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:text="@string/stepper_import_secret_keyboard" />

    <EditText
        android:id="@+id/stepper_import_secret_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/stepper_import_secret_hint"/>

</merge>