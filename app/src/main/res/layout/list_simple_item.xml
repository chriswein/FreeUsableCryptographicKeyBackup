<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_two_line_height"
    android:paddingLeft="@dimen/list_two_line_text_padding_horizontal"
    android:paddingRight="@dimen/list_two_line_text_padding_horizontal"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/overview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_two_line_text_primary_size"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/overview_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_two_line_text_secondary_size"
        android:fontFamily="sans-serif-thin" />

</LinearLayout>